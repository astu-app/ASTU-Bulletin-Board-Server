@startuml
'https://plantuml.com/use-case-diagram

left to right direction

:Сотрудник: as employee

rectangle "Доска объявлений" {
    (<font color="gray">E-1.</font> Управление объявлениями) as manage_notifications
    (<font color="gray">E-1.6.</font> Управление скрытыми объявлениями) as manage_hidden_notifications
    (<font color="gray">E-1.7.</font> Управление отложенными объявлениями) as manage_delayed_notifications
    (<font color="gray">E-1.4.</font> Удалить объявление) as remove_notification
        
    (<font color="gray">E-1.2.</font> Редактировать объявление) as edit_notification
    (<font color="gray">E-1.7.3.</font> Редактировать отложенное объявление) as edit_delayed_notifications
    (<font color="gray">E-1.6.3.</font> Удалить скрытое объявление) as remove_hidden_notifications
    (<font color="gray">E-1.7.4.</font> Удалить отложенное объявление) as remove_delayed_notifications
    
    employee --> manage_notifications
    
    manage_notifications <|-- edit_notification
    manage_notifications <|-- (<font color="gray">E-1.5.</font> Скрыть объявление) 
    manage_notifications <|-- manage_hidden_notifications 
    manage_notifications <|-- remove_notification 
    manage_notifications <|-- (<font color="gray">E-1.3.</font> Собрать статистику просмотра объявлений)
    manage_notifications <|-- (<font color="gray">E-1.1.</font> Создать объявление) 
    
    manage_notifications <|-- manage_delayed_notifications
    manage_delayed_notifications <|-- edit_delayed_notifications
    manage_delayed_notifications <|-- (<font color="gray">E-1.7.2.</font> Сразу опубликовать отложенное объявление)
    manage_delayed_notifications <|-- (<font color="gray">E-1.7.1.</font> Просмотреть список отложенных объявлений)
    manage_delayed_notifications <|-- remove_delayed_notifications
    
    edit_delayed_notifications -up-> edit_notification : include
    remove_delayed_notifications -up-> remove_notification : include
    
    manage_hidden_notifications <|-- (<font color="gray">E-1.6.2.</font> Восстановить скрытое объявление)
    manage_hidden_notifications <|-- (<font color="gray">E-1.6.1.</font> Просмотреть список скрытых объявлений)
    manage_hidden_notifications <|-- remove_hidden_notifications
    
    remove_hidden_notifications -up-> remove_notification : include
}

@enduml